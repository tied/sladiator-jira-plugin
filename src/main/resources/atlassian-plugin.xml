<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>
    
    
	<component-import key="userManager" interface="com.atlassian.sal.api.user.UserManager" />
	<component-import key="loginUriProvider" interface="com.atlassian.sal.api.auth.LoginUriProvider" />
	<component-import key="renderer" interface="com.atlassian.templaterenderer.velocity.one.six.VelocityTemplateRenderer" />
 	<component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties" />
	<component-import key="pluginSettingsFactory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory" />
	<component-import key="transactionTemplate" interface="com.atlassian.sal.api.transaction.TransactionTemplate" />
  <component-import key="eventPublisher" interface="com.atlassian.event.api.EventPublisher"/>
  <component-import key="pluginScheduler" interface="com.atlassian.sal.api.scheduling.PluginScheduler" />
    
	<rest key="rest" path="/realsla-config" version="1.0">
    	<description>Provides REST resources for the RealSLA config UI.</description>
	</rest>

	<web-item key="jira-menu-item" name="RealSLA Config" section="system.admin/globalsettings" weight="10" application="jira">
    	<description>Link to RealSAL config page.</description> 
    	<label key="realsla.config.title" /> 
    	<link linkId="realsla-config-link">/plugins/servlet/realsla/config</link> 
	</web-item>
	<web-item key="fe-menu-item" name="RealSLA Config" section="system.admin/global" weight="10" application="fisheye">
    	<description>Link to RealSAL config page.</description> 
    	<label key="realsla.config.title" /> 
    	<link linkId="realsla-config-link">/plugins/servlet/realsla/config</link> 
	</web-item>
	<web-item key="bamboo-menu-item" name="RealSLA Config" section="system.admin/plugins" weight="10" application="bamboo">
    	<description>Link to RealSAL config page.</description> 
    	<label key="realsla.config.title" /> 
    	<link linkId="realsla-config-link">/plugins/servlet/realsla/config</link> 
	</web-item>
	<web-item key="conf-menu-item" name="RealSLA Config" section="system.admin/configuration" weight="10">
    	<description>Link to RealSAL config page.</description> 
    	<label key="realsla.config.title" /> 
    	<link linkId="realsla-config-link">/plugins/servlet/realsla/config</link> 
	</web-item>
	<web-item key="refapp-menu-item" name="RealSLA Config" section="system.admin/general" weight="10" application="refapp"> 
    	<description>Link to RealSAL config page.</description> 
    	<label key="realsla.config.title" /> 
    	<link linkId="realsla-config-link">/plugins/servlet/realsla/config</link> 
	</web-item>
	
	<component key="eventListener" class="lv.ebit.jira.plugins.IssueListener">
    <description>Monitor the incoming JIRA issue events.</description>
  </component>
	
	<servlet key="configServlet" class="lv.ebit.jira.plugins.ConfigServlet">
    	<url-pattern>/realsla/config</url-pattern>
    	<description>RealSLA configuration GUI</description>
	</servlet>
	<resource type="i18n" name="i18n" location="lv.ebit.jira.plugins.i18n" />
	
	<web-resource name="Config Web Resources" key="resources"> 
    	<dependency>com.atlassian.auiplugin:ajs</dependency> 
    	<resource type="download" name="realsla.js" location="javascripts/realsla.js"/>
    	<resource type="download" name="realsla.css" location="stylesheets/realsla.css"/>
	</web-resource>

	<template-context-item key="applicationPropertiesContextItem" component-ref="applicationProperties"
context-key="applicationProperties" name="Application Properties Context Item"/>

</atlassian-plugin>