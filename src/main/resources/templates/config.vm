<html>
  <head>
    <title>$i18n.getText("realsla.config.title")</title>
    <meta name="decorator" content="atl.admin" />
    <meta name="application-base-url" content="$applicationProperties.getBaseUrl()">
    $webResourceManager.requireResource("lv.ebit.jira.plugins.realsla:resources")
  </head>
  <body>
    <table class="jiraform maxWidth" id="realsla">
      <tr class="titlerow">
        <td class="jiraformheader">
          <h3 class="formtitle">$i18n.getText("realsla.config.title")</h3>
        </td>
      </tr>
      <tr>
        <td class="instructions">
          <p>Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum </p> 
          <div class="infoBox">Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit.. </div> 
          <p>Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum </p>
        </td>
      </tr>
      <tr>
        <td class="jiraformbody">
          <ul class="operations">
            <li>
              <a id="add_sla" class="operations-item" href="#">
                <span class="icon icon-add16"></span>$i18n.getText("realsla.config.add")
              </a>
            </li>
          </ul>
            
          <table class="aui">
            <thead>
              <tr>
                <th class="sla-name">$i18n.getText("realsla.config.sla")</th>
                <th class="sla-projects">$i18n.getText("realsla.config.projects")</th>
                <th class="sla-actions">$i18n.getText("realsla.config.actions")</th>
              </tr>
            </thead>
            <tbody>
              <tr id="newRecord" style="display:none;" class="">
                <td colspan="3">
                  <form class="aui" action="#" method="post">
                    <fieldset>
                      <div class="field-group">
                        <label>$i18n.getText("realsla.config.sla")<span class="aui-icon icon-required"></span><span class="content"> required</span></label>
                        <input class="text " maxlength="150" name="sla" type="text">
                      </div>
                      <div class="field-group">
                        <label>$i18n.getText("realsla.config.sla_token")<span class="aui-icon icon-required"></span><span class="content"> required</span></label>
                        <input class="text " maxlength="150" name="sla_token" type="text">
                      </div>
                      <div class="field-group">
                        <label>$i18n.getText("realsla.config.projects")<span class="aui-icon icon-required"></span><span class="content"> required</span></label>
                        <select name="project[]" multiple="multiple">
			                    #foreach ($project in $projects) 
                            <option value="$project.getId()">$project.getName() ($project.getKey())</option>
                          #end
			                  </select>
                      </div>
                     </fieldset>
                     <input type="submit" name="save" value="Save" accesskey="s" class="button spaced ">
                     <input type="button" class="spaced new-cancel" accesskey="`" name="cancel" value="Cancel">
                  </form>
                </td>
              </tr>
              <tr id="row0-show">
                <td><a href="http://realsla.com/token">First SLA (token_for_1)</a></td>
                <td>Project 1 (ONE), Project 3 (THREE)</td>
                <td>
                  <ul class="operations-list">
                    <li><a class="sla-edit" href="#" data-row="row0">$i18n.getText("realsla.config.edit")</a></li>
                    <li><a class="sla-delete" href="#" data-row="row0">$i18n.getText("realsla.config.delete")</a></li>
                  </ul>
                </td>
              </tr>
              <tr id="row0-edit" style="display:none;">
                <td colspan="3">
                  <form class="aui" action="#" method="post">
                    <fieldset>
                      <div class="field-group">
                        <label>$i18n.getText("realsla.config.sla")<span class="aui-icon icon-required"></span><span class="content"> required</span></label>
                        <input class="text " maxlength="150" name="sla" type="text" value="First SLA">
                      </div>
                      <div class="field-group">
                        <label>$i18n.getText("realsla.config.sla_token")<span class="aui-icon icon-required"></span><span class="content"> required</span></label>
                        <input class="text " maxlength="150" name="sla_token" type="text" value="token_for_1">
                      </div>
                      <div class="field-group">
                        <label>$i18n.getText("realsla.config.projects")<span class="aui-icon icon-required"></span><span class="content"> required</span></label>
                        <select name="project[]" multiple="multiple">
                          #foreach ($project in $projects) 
                            <option value="$project.getId()">$project.getName() ($project.getKey())</option>
                          #end
                        </select>
                      </div>
                     </fieldset>
                     <input type="submit" name="save" value="Save" data-row="row0" accesskey="s" class="button spaced ">
                     <input type="button" class="spaced row-cancel" data-row="row0" accesskey="`" name="cancel" value="Cancel">
                  </form>
                </td>
              </tr>
              <tr class="zebra">
                <td><a href="http://realsla.com/token">Second SLA (token_for_2)</a></td>
                <td>Project 1 (ONE), Project 2 (TWO), Project 3 (THREE)</td>
                <td>
                  <ul class="operations-list">
                    <li><a class="sla-edit" href="#">$i18n.getText("realsla.config.edit")</a></li>
                    <li><a class="sla-delete" href="#">$i18n.getText("realsla.config.delete")</a></li>
                  </ul>
                </td>
              </tr>
              <tr>
                <td><a href="http://realsla.com/token">Third SLA (token_for_3)</a></td>
                <td>Project 1 (ONE), Project 2 (TWO), Project 3 (THREE)</td>
                <td>
                  <ul class="operations-list">
                    <li><a class="sla-edit" href="#">$i18n.getText("realsla.config.edit")</a></li>
                    <li><a class="sla-delete" href="#">$i18n.getText("realsla.config.delete")</a></li>
                  </ul>
                </td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>